<%# app/views/appointments/new.html.erb %>
<div class="mobile-dashboard">
  <!-- Back button -->
  <div class="btn-back">
    <%= link_to appointments_path, class: "btn-link border-0 ps-2" do %>
      <i class="fas fa-arrow-left me-2"></i>
      Retour à la liste
    <% end %>
  </div>

  <!-- Form card -->
  <div class="dashboard-section">
    <h2 class="appointment-form-title">
      <i class="fas fa-calendar-plus"></i>
      Nouveau evènement
    </h2>

    <%= render "form_appoint", appointment: @appointment %>
  </div>
</div>
