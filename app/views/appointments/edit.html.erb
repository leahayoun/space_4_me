<%# app/views/appointments/edit.html.erb %>


<div class="container py-4">
  <!-- back btn-->
  <div class="mb-4">
    <%= link_to appointment_path(@appointment), class: "btn btn-link text-decoration-none border-0 ps-0" do %>
      <i class="fas fa-arrow-left me-2"></i>
      Retour à l'événement
    <% end %>
  </div>

  <!-- edit -->
  <div class="card appointment-form-card">
    <div class="card-header">
      <h2 class="h4 mb-0">
        <i class="fas fa-edit me-2"></i>
        Modifier l'événement
      </h2>
    </div>

    <div class="card-body">
      <%= render "form_appoint", appointment: @appointment %>
    </div>
  </div>
</div>
