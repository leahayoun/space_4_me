<%# app/views/appointments/edit.html.erb %>

<div class="mobile-dashboard">
  <!-- Back button -->
  <div class="btn-back">
    <%= link_to appointment_path(@appointment), class: "btn-link border-0 ps-2" do %>
      <i class="fas fa-arrow-left me-2"></i>
      Retour à l'événement
    <% end %>
  </div>

  <!-- Form card -->
  <div class="dashboard-section">
    <h2 class="appointment-form-title">
      <i class="fas fa-edit"></i>
      Modifier l'événement
    </h2>

    <%= render "form_appoint", appointment: @appointment %>
  </div>
</div>
