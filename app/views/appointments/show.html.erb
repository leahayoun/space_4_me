<%# app/views/appointments/show.html.erb %>


<div class="mobile-dashboard" data-controller="delete-modal">
  <!-- Back button -->
  <div class="btn-back">
    <%= link_to appointments_path, class: "btn-link border-0 ps-2" do %>
      <i class="fas fa-arrow-left me-2"></i>
      Retour à la liste
    <% end %>
  </div>

  <!-- card style du dashboard-section -->
  <div class="dashboard-section">
    <!-- Action icons (top right) -->
    <div class="appointment-show-icons">
      <div class="appointment-card-icons">
        <%= link_to edit_appointment_path(@appointment), class: "appointment-icon-btn appointment-icon-edit", title: "Modifier" do %>
          <i class="fas fa-pen"></i>
        <% end %>
        <button type="button"
                class="appointment-icon-btn appointment-icon-delete"
                data-action="click->delete-modal#open"
                data-delete-url="<%= appointment_path(@appointment) %>"
                data-appointment-title="<%= @appointment.title %>"
                title="Supprimer">
          <i class="fas fa-times"></i>
        </button>
      </div>
    </div>

    <!-- Title (centered) -->
    <h1 class="appointment-show-title">
      <%= @appointment.title %>
    </h1>

    <!-- info  -->
    <div class="mb-4">
      <div class="d-flex align-items-center mb-3">
        <i class="fas fa-calendar-day text-primary me-3 fs-5"></i>
        <div>
          <p class="appointment-show-label small mb-1">Date</p>
          <p class="mb-0 fw-bold"><%= @appointment.date %></p>
        </div>
      </div>

      <div class="d-flex align-items-center mb-3">
        <i class="fas fa-tag text-primary me-3 fs-5"></i>
        <div>
          <p class="appointment-show-label small mb-1">Type</p>
          <p class="mb-0 fw-bold">
            <span class="badge bg-<%= appointment_type_color(@appointment.event_type) %>">
              <%= @appointment.event_type %>
            </span>
          </p>
        </div>
      </div>

      <% if @appointment.address.present? %>
        <div class="d-flex align-items-start mb-3">
          <i class="fas fa-map-marker-alt text-primary me-3 fs-5 mt-1"></i>
          <div>
            <p class="appointment-show-label small mb-1">Adresse</p>
            <p class="mb-0"><%= @appointment.address %></p>
          </div>
        </div>
      <% end %>
    </div>

    <!-- descrip-->
    <% if @appointment.content.present? %>
      <div class="mb-4">
        <div class="d-flex align-items-start">
          <i class="fas fa-sticky-note text-primary me-3 fs-5 mt-1"></i>
          <div class="flex-grow-1">
            <p class="appointment-show-label small mb-1">Notes</p>
            <div class="appointment-show-notes">
              <%= simple_format(@appointment.content) %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- bottom info-->
    <div class="border-top pt-3 mt-3">
      <div class="text-muted small">
        <i class="fas fa-clock me-1"></i>
        Crée <%= time_ago_in_words(@appointment.created_at) %>
      </div>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div data-delete-modal-target="overlay"
       data-action="click->delete-modal#closeOnOverlay"
       class="delete-modal-overlay">
    <div class="delete-modal">
      <div class="delete-modal-icon">
        <i class="fas fa-trash-alt"></i>
      </div>
      <h3 class="delete-modal-title">Supprimer cet événement ?</h3>
      <p class="delete-modal-text">
        <span data-delete-modal-target="eventName"></span>
      </p>
      <p class="delete-modal-warning">Cette action est irréversible.</p>
      <div class="delete-modal-actions">
        <button type="button"
                class="delete-modal-btn delete-modal-cancel"
                data-action="click->delete-modal#close">
          Annuler
        </button>
        <%= form_tag "", method: :delete, data: { delete_modal_target: "form" }, class: "delete-modal-form" do %>
          <button type="submit" class="delete-modal-btn delete-modal-confirm">
            Supprimer
          </button>
        <% end %>
      </div>
    </div>
  </div>
</div>
