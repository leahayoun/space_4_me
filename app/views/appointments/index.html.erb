<h1 class="text-center">Events</h1>
<%# app/views/appointments/index.html.erb %>

<div class="container py-4">
    <!-- back btn -->
  <div class="btn-back">
    <%= link_to dashboard_path, class: "btn btn-outline-light text-dark border-0 ps-0" do %>
      <i class="fas fa-arrow-left me-2"></i>
      Dashboard
    <% end %>
  </div>
  <!-- entete -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
      <i class="fas fa-list-alt me-2"></i>
      All
    </h1>

    <%= link_to new_appointment_path, class: "btn btn-primary" do %>
      <i class="fas fa-plus me-2"></i>
      New Event
    <% end %>
  </div>

  <!-- lists of events -->
  <% if @appointments.empty? %>
    <div class="text-center py-5">
      <i class="fas fa-calendar-plus fa-3x text-muted mb-3"></i>
      <h3 class="h4 text-muted">No appointments yet</h3>
      <p class="text-muted">Create your first appointment to get started.</p>
      <%= link_to "Create First Appointment", new_appointment_path, class: "btn btn-primary" %>
    </div>
  <% else %>
    <div class="row">
      <% @appointments.each do |appointment| %>
        <div class="col-md-6 mb-3">
          <div class="card appointment-list-card h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start">
                <h5 class="card-title mb-0">
                  <%= appointment.title %>
                </h5>
                <span class="badge bg-secondary">
                  <%= appointment.event_type %>
                </span>
              </div>

              <div class="mt-2">
                <div class="text-muted small">
                  <i class="fas fa-calendar-day me-1"></i>
                  <%= appointment.date %>
                </div>

                <% if appointment.address.present? %>
                  <div class="text-muted small mt-1">
                    <i class="fas fa-map-marker-alt me-1"></i>
                    <%= truncate(appointment.address, length: 30) %>
                  </div>
                <% end %>
              </div>

              <% if appointment.content.present? %>
                <p class="card-text mt-2 small">
                  <%= truncate(appointment.content, length: 80) %>
                </p>
              <% end %>
            </div>

            <div class="card-footer bg-transparent">
              <div class="d-flex justify-content-between">

                <%= link_to "View", appointment, class: "btn btn-sm btn-outline-primary" %>

                <div class="btn-group" role="group">
                  <%= link_to "Edit", edit_appointment_path(appointment), class: "btn btn-sm btn-outline-secondary" %>

                  <%= link_to appointment,
                              method: :delete,
                              data: {
                                turbo_method: :delete,
                                turbo_confirm: "Are you sure you want to delete this event?"
                              },
                              class: "btn btn-sm btn-outline-secondary" do %>
                    <i class="fas fa-trash me-2"></i>
                  <% end %>
                </div>


              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

</div>
