<div class="mobile-dashboard">
  <!-- back btn -->
  <div class="btn-back">
    <%= link_to dashboard_path, class: "btn-link border-0 ps-2" do %>
      <i class="fas fa-arrow-left me-2"></i>
      Dashboard
    <% end %>
  </div>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
      <i class="fas fa-calendar-alt me-2"></i>
      Evènements
    </h1>

    <%= link_to new_appointment_path, class: "btn btn-primary" do %>
      <i class="fas fa-plus me-2"></i>
      Nouveau
    <% end %>
  </div>

  <% if @appointments.any? %>
    <div class="row">
      <% @appointments.each do |appointment| %>
        <div class="col-12 mb-3">
          <div class="appointment-list-card card">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start">
                <h5 class="card-title mb-2">
                  <%= appointment.title %>
                </h5>
                <% if appointment.event_type.present? %>
                  <span class="badge bg-secondary">
                    <%= appointment.event_type %>
                  </span>
                <% end %>
              </div>

              <div class="text-muted small mb-2">
                <i class="fas fa-calendar-day me-1"></i>
                <%= l(appointment.date, format: :long) %>
              </div>

              <% if appointment.address.present? %>
                <div class="text-muted small mb-3">
                  <i class="fas fa-map-marker-alt me-1"></i>
                  <%= truncate(appointment.address, length: 50) %>
                </div>
              <% end %>
            </div>

            <div class="card-footer">
              <div class="d-flex justify-content-between">
                <%= link_to "Voir", appointment_path(appointment), class: "btn btn-outline-primary btn-sm" %>

                <div class="btn-group">
                  <%= link_to "Modifier", edit_appointment_path(appointment), class: "btn btn-outline-secondary btn-sm" %>
                  <%= link_to "Supprimer", appointment_path(appointment),
                        method: :delete,
                        data: { confirm: "Êtes-vous sûr ?" },
                        class: "btn btn-outline-secondary btn-sm" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <i class="fas fa-calendar-plus fa-3x text-muted mb-3"></i>
      <h3>Aucun rendez-vous</h3>
      <p class="text-muted">Ajoutez votre premier rendez-vous</p>
      <%= link_to "+ Nouveau rendez-vous", new_appointment_path, class: "btn btn-primary mt-3" %>
    </div>
  <% end %>
</div>
