<div class="auth-container">
<div class="auth-card">
<h2 class="auth-title">Connexion</h2>
<p class="auth-subtitle">Ravi de te revoir</p>


<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-inputs">
<%= f.input :email,
label: "Adresse email",
required: false,
autofocus: true,
input_html: { autocomplete: "email", class: "auth-input" } %>


<%= f.input :password,
label: "Mot de passe",
required: false,
input_html: { autocomplete: "current-password", class: "auth-input" } %>


<% if devise_mapping.rememberable? %>
<%= f.input :remember_me, as: :boolean, label: "Se souvenir de moi" %>
<% end %>
</div>


<div class="form-actions">
<%= f.button :submit, "Entrer", class: "btn-primary auth-button" %>
</div>
<% end %>


<div class="auth-links">
<%= render "devise/shared/links" %>
</div>
</div>
</div>
