<div class="auth-container">
  <div class="auth-card">
    <h2 class="auth-title">Confirmation</h2>
    <p class="auth-subtitle">Renvoyer les instructions de confirmation</p>

    <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
      <%= f.full_error :confirmation_token %>

      <div class="form-inputs">
        <%= f.input :email,
                    label: "Adresse email",
                    required: true,
                    autofocus: true,
                    value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
                    input_html: { autocomplete: "email", class: "auth-input" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Renvoyer les instructions", class: "auth-button" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
