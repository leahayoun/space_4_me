<div class="auth-container">
  <div class="auth-card">
    <h2 class="auth-title">Mot de passe oublié ?</h2>
    <p class="auth-subtitle">Pas de panique, ça arrive à tout le monde</p>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    label: "Adresse email",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "auth-input" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Envoyer les instructions", class: "auth-button" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
