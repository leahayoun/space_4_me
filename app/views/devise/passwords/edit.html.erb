<div class="auth-container">
  <div class="auth-card">
    <h2 class="auth-title">Nouveau mot de passe</h2>
    <p class="auth-subtitle">Choisis un mot de passe sécurisé</p>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password,
                    label: "Nouveau mot de passe",
                    required: true,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: "auth-input" } %>

        <%= f.input :password_confirmation,
                    label: "Confirmer le mot de passe",
                    required: true,
                    input_html: { autocomplete: "new-password", class: "auth-input" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Changer mon mot de passe", class: "auth-button" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
