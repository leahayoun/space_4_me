<div class="auth-container">
<div class="auth-card">
<h2>Inscription</h2>

<div class="auth-container">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name,
                  required: true,
                  label: "Prénom",
                  input_html: { class: "auth-input" } %>

      <%= f.input :last_name,
                  required: true,
                  label: "Nom",
                  input_html: { class: "btn-primary auth-input" } %>

      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "auth-input" } %>

      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                  label: "Mot de passe",
                  input_html: { autocomplete: "new-password", class: "auth-input" } %>

      <%= f.input :password_confirmation,
                  required: true,
                  label: "Confirmation mot de passe",
                  input_html: { autocomplete: "new-password", class: "auth-input" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "S'inscrire", class: "auth-button" %>
    </div>

    <div class="auth-links">
      <%= link_to "Se connecter", new_session_path(resource_name) %>
    </div>
  </div>
  <% end %>
